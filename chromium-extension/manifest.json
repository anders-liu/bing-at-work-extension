{
    "name": "Bing At Work",
    "version": "1.0",
    "description": "A 3rd party user interface to Microsoft Search in Bing (MSB, also aka Bing at Work, Bing for Business).",
    "manifest_version": 2,
    "minimum_chrome_version": "68",
    "homepage_url": "https://github.com/anders-liu/bing-at-work-extension",
    "author": "Anders Liu",
    "icons": {
      "16": "assets/icons/baw-16.png",
      "32": "assets/icons/baw-32.png",
      "48": "assets/icons/baw-48.png",
      "128": "assets/icons/baw-128.png"
    },
    "permissions": ["activeTab", "storage", "tabs"],
    "content_scripts": [{
        "matches": [
            "https://*.bing.com/search?*",
            "https://*.bing.com/work/search?*"
        ],
        "js": ["content/entry.js"]
    }],
    "browser_action": {
        "default_popup": "popup/popup.html"
    }
}