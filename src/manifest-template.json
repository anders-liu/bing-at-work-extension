{
    "name": "__NAME__",
    "version": "__VERSION__",
    "description": "__DESCRIPTION__",
    "manifest_version": 2,
    "minimum_chrome_version": "68",
    "homepage_url": "__HOMEPAGE_URL__",
    "author": "__AUTHOR__",
    "icons": {
      "16": "assets/icons/baw-16.png",
      "32": "assets/icons/baw-32.png",
      "48": "assets/icons/baw-48.png",
      "128": "assets/icons/baw-128.png"
    },
    "permissions": [
        "https://*.bing.com/*",
        "activeTab",
        "storage",
        "tabs"
    ],
    "content_scripts": [{
        "matches": [
            "https://*.bing.com/search?*",
            "https://*.bing.com/work/search?*"
        ],
        "js": ["content.js"]
    }],
    "browser_action": {
        "default_popup": "popup.html"
    }
}